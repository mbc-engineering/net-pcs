    <Product>Mbc.Pcs.Net</Product>

    <EnableUnsafeBinaryFormatterSerialization>true</EnableUnsafeBinaryFormatterSerialization>
  </PropertyGroup>
  <PropertyGroup>
        <NoWarn>NU1702</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Mbc.AsyncUtils" Version="0.4.0" />
